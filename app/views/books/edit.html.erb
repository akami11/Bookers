<h1>Editing Book</h1>
<%= render 'layouts/error_messages', book: @book %>
<%= form_with model:@book, local: true do |f| %>

  <h4>Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>

  <h4>Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  <div/>
  <%= link_to "show", book_path(@book.id), method: :get %>
  |
  <%= link_to "Back", books_path %>
<% end %>
